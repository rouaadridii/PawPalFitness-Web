{% extends 'base.html.twig' %}

{% block title %}Forgot Password{% endblock %}

{% block body %}
    <section class="hero-section">
        <div class="hero-items owl-carousel">
            <div class="single-hero-item set-bg" data-setbg="{{ asset('img/mainimg.png') }}">
                <div class="signup-form">
                    <h2>Forgot Password</h2>
                    
                    {% if app.session.flashbag.has('error') %}
                        {% set errorMessages = app.session.flashbag.get('error') %}
                        {% if errorMessages is iterable %}
                            {% for errorMessage in errorMessages %}
                                <div class="alert alert-danger">{{ errorMessage }}</div>
                            {% endfor %}
                        {% else %}
                            <div class="alert alert-danger">{{ errorMessages }}</div>
                        {% endif %}
                    {% endif %}
                    
                    {% if app.session.flashbag.has('success') %}
                        {% set successMessages = app.session.flashbag.get('success') %}
                        {% if successMessages is iterable %}
                            {% for successMessage in successMessages %}
                                <div class="alert alert-success">{{ successMessage }}</div>
                            {% endfor %}
                        {% else %}
                            <div class="alert alert-success">{{ successMessages }}</div>
                        {% endif %}
                    {% endif %}
                    
                    <form action="{{ path('app_send_forgot_password_email') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email Address:</label>
                            <input type="email" id="email" name="email" class="form-control" style="width: 300px;" required>
                        </div>
                        <button type="submit" class="btn btn-primary" id="sendEmailBtn">Send Verification Code</button>
                    </form>

                    <script>
                        // Add event listener for form submission
                        document.getElementById('sendEmailBtn').addEventListener('click', function() {
                            // Log a message to the browser console when the button is clicked
                            console.log('Verification code email sent successfully');
                        });
                    </script>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
