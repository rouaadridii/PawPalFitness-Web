{% extends 'baseback.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>actions</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.category }}</td>
                 <td>
                    {% if product.image %}
                        <img src="{{ asset('uploads/' ~ product.image) }}" alt="Classe image" width="100" />
                    {% else %}
                        No image available
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_product_back_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_product_back_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_back_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
