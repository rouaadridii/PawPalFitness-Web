{% extends 'baseFront.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
    <section class="bg-light p-3">
        <h1 align="center">Panier</h1>
    </section>

    <table class="table">
        <thead>
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for element in dataPanier %}
            <tr>
                <td>{{ element.produit.title }}</td>
                <td class="text-end">{{ element.produit.price }} TND</td>
                <td>{{ element.quantite }}</td>
                <td class="text-end">{{ element.quantite * element.produit.price }} TND</td>
                <td>
                    <a href="{{path("cart1_add", {id: element.produit.id})}}" class="btn btn-success">
                        +  <i class="bi bi-cart1-plus"></i>
                    </a>
                    <a href="{{path("cart1_remove", {id: element.produit.id})}}" class="btn btn-warning">
                        -  <i class="bi bi-cart1-dash"></i>
                    </a>
                    <a href="{{path("cart1_delete", {id: element.produit.id})}}" class="btn btn-danger">
                        Supprimer <i class="bi bi-cart1-x"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">Votre panier est vide</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3">Total</td>
            <td class="text-end">{{ total }} TND</td>
            <td>
                <a href="{{path("cart1_delete_all")}}" class="btn btn-danger">
                    Tout supprimer <i class="bi bi-cart1-x"></i>
                </a>
            </td>
        </tr>
        <td>
            <a href="{{path('products_index')}}" class="btn btn-warning">
                POURSUIVRE VOS ACHATS<i class="bi bi-cart1-x"></i>
            </a>
        </td>
        <td>
            <a href="{{path("commande_new", {id:  total })}}" class="btn btn-success">
                FINALISER VOTRE COMMANDE<i class="bi bi-cart1-x"></i>
            </a>
        </td>

        </tfoot>
    </table>

{% endblock %}