{% extends 'base.html.twig' %}

{% block body %}

<br><br><br><br>
    <div class="container emp-profile">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="row">
                <div class="col-md-4">
                    <div class="profile-img">
                        {% if form.vars.value.idc.nomc == 'Chien' %}
                            <img src="{{ asset('img/dog.jpg') }}" alt=""/>
                        {% else %}
                            <img src="{{ asset('img/cat.jpg') }}" alt=""/>
                        {% endif %}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="profile-head">
                        <h5>{{ form.vars.value.nom }}</h5>
                        <h6>{{ form.vars.value.type }}</h6>

                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                            </li> 
                        </ul>

                    </div>
                </div>

                <div class="col-md-2">
                    {{ form_widget(form.Edit_Profile, { 'attr': {'class': 'profile-edit-btn'} }) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="profile-work">
                        <p>Recommended Treats</p>
                        <img src="{{ asset('img/carrots.png') }}" alt="" style="width: 30px;height:30px;"/>
                        <img src="{{ asset('img/parmesan.png') }}" alt="" style="width: 30px;height:30px;"/>
                        <img src="{{ asset('img/water-melon.png') }}" alt="" style="width: 30px;height:30px;"/><br/>
                        <p>Does</p>
                        <img src="{{ asset('img/broccoli.png') }}" alt="" style="width: 30px;height:30px;"/>
                        <img src="{{ asset('img/meat.png') }}" alt="" style="width: 30px;height:30px;"/><br/>
                        <p>Don'ts</p>
                        <img src="{{ asset('img/no-chocolate.png') }}" alt="" style="width: 30px;height:30px;"/>
                        <img src="{{ asset('img/raisins.png') }}" alt="" style="width: 30px;height:30px;"/><br/>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Name</label>
                                </div>
                                <div class="col-md-6">
                                    <p>{{ form.vars.value.nom }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Age in years</label>
                                </div>
                                <div class="col-md-6"> 
                                    {{ form_widget(form.age, { 'attr': {'class': 'form-control', 'placeholder': form.vars.value.age ~ ' Ans', 'style': 'background-color: #CADAE5;'} }) }}
                                    {% if form_errors(form.age) is not empty %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(form.age) }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Weight in KG</label>
                                </div>
                                <div class="col-md-6">
                                    {{ form_widget(form.poids, { 'attr': {'class': 'form-control', 'placeholder': form.vars.value.poids ~ ' KG', 'style': 'background-color: #CADAE5;'} }) }}
                                    {% if form_errors(form.poids) is not empty %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(form.poids) }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Details</label>
                                </div>
                                <div class="col-md-6">
                                    {{ form_widget(form.details, { 'attr': {'class': 'form-control', 'placeholder': form.vars.value.details, 'style': 'background-color: #CADAE5;'} }) }}
                                    {% if form_errors(form.details) is not empty %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(form.details) }}
                                    </div>
                                    {% endif %}
                                </div>

                                <div class="col-md-6">
                                {{ form_label(form.idc, "Categorie") }}
                                    {{ form_widget(form.idc, {'attr': {'class': 'form-control','disabled': 'disabled'}}) }} 
                                
                                </div>

                                <div class="col-md-6">
                                    {{ form_label(form.idu, "Owner") }}
                                   {{ form_widget(form.idu, {'attr': {'class': 'form-control','disabled': 'disabled'}}) }} 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}          
    </div>

<style>
body{
    background: -webkit-linear-gradient(left, #e16521, #e4381C);
}
.emp-profile{
    padding: 5%;
    margin-top: 3%;
    margin-bottom: 3%;
    border-radius: 0.5rem;
    background: #fff;
}
.profile-img{
    text-align: center;
}
.profile-img img{
    width: 70%;
    height: 100%;
}

.profile-head h5{
    color: #333;
}
.profile-head h6{
    color: #e4381C;
}
.profile-edit-btn{
    border: none;
    border-radius: 1.5rem;
    width: 70%;
    padding: 2%;
    font-weight: 600;
    color: #6c757d;
    cursor: pointer;
}
.profile-edit-btn:hover{
    background-color: #b8b8c8;
}

.profile-head .nav-tabs{
    margin-bottom:1%;
}
.profile-head .nav-tabs .nav-link.active{
    border: none;
    border-bottom:2px solid #0062cc;
}
.profile-work{
    padding: 13%;
    margin-top: -15%;
}
.profile-work p{
    font-size: 12px;
    color: #818182;
    font-weight: 600;
    margin-top: 10%;
    margin-bottom:2%;
}
.profile-work a{
    text-decoration: none;
    color: #495057;
    font-weight: 600;
    font-size: 14px;
}

.profile-tab label{
    font-weight: 600;
}
.profile-tab p{
    font-weight: 600;
    color: #0062cc;
}
</style>
{% endblock %}