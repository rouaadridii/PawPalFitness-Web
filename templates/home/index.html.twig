{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1 class="mt-3 mb-4">Products</h1>
        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="{{ asset('uploads/' ~ product.image) }}" alt="{{ product.name }}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description }}</p>
                            <div class="d-flex justify-content-between align-item-center">
                                <a href="{{ path('product.detail', {id: product.id}) }}" class="btn btn-dark">View details</a>
                                <span class="h5 mt-auto">{{ product.price }} TND</span>
<br>
<br>
<br>
    <div class="container">
        <h1 class="mt-3 mb-4">Salles</h1>
        <div class="row">
            {% for salle in salles %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="{{ asset('uploads/' ~ salle.image) }}" alt="{{ salle.nom_salle }}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ salle.nom_salle }}</h5>
                            <p class="card-text">{{ salle.description_salle }}</p>
                            <div class="d-flex justify-content-between align-item-center">
                            
                            <img src="{{ salle.qrCode }}" width="123" height="100" />
                        
                        <a href="{{ path('app_abonnement_front', {'id': salle.id}) }}" class="btn btn-primary">Subscribe</a>

                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
