{% extends 'baseback.html.twig' %}

{% block title %}OrderItem Index{% endblock %}

{% block body %}
<h5 class="card-header">OrderItem Index</h5>
<div class="table-responsive text-nowrap">
    <table class="table">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
        {% for order_item in order_items %}
            <tr>
                <td>{{ order_item.id }}</td>
                <td>{{ order_item.quantity }}</td>
                <td>
                    <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('app_order_item_show', {'id': order_item.id}) }}">
                                <i class="bx bx-show me-1"></i> Show
                            </a>
                            <a class="dropdown-item" href="{{ path('app_order_item_edit', {'id': order_item.id}) }}">
                                <i class="bx bx-edit-alt me-1"></i> Edit
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<a href="{{ path('app_order_item_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
