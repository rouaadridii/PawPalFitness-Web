{% block body %}
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>Contact Us</h2>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Your Name', 'required': 'required'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Your Last Name', 'required': 'required'}}) }}
                        </div>
                    </div>

                    {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Your Email', 'required': 'required'}}) }}

                    {{ form_row(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Your Address', 'required': 'required'}}) }}

                    {{ form_row(form.numtelephone, {'attr': {'class': 'form-control', 'placeholder': 'Your Phone Number', 'required': 'required'}}) }}

                    

                   

                    <button type="submit" class="btn btn-success">{{ buton_label|default('Enregistrer') }}</button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
    <!-- Add more sections or content as needed -->
{% endblock %}