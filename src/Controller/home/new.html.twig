{% extends 'base.html.twig' %}

{% block body %}
<br>
<br>
<br>
<div class="container mt-3">
    <h2>Subscribe to {{ abonnement.salle.nom_salle }}</h2>
    <div class="mt-3">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}  <!-- Adding novalidate attribute here -->
        <div class="form-group">
            {{ form_label(form.duree_abonnement) }}
            {{ form_widget(form.duree_abonnement, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.duree_abonnement) }}
        </div>
        <div class="form-group">
            {{ form_label(form.prix_abonnement) }}
            {{ form_widget(form.prix_abonnement, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix_abonnement) }}
        </div>
        <div class="form-group">
            {{ form_label(form.date_deb_abonnement) }}
            {{ form_widget(form.date_deb_abonnement, {'attr': {'class': 'form-control', 'placeholder': 'YYYY-MM-DD'}}) }}
            {{ form_errors(form.date_deb_abonnement) }}
        </div>
        <div class="form-group">
            {{ form_label(form.date_fin_abonnement) }}
            {{ form_widget(form.date_fin_abonnement, {'attr': {'class': 'form-control', 'placeholder': 'YYYY-MM-DD'}}) }}
            {{ form_errors(form.date_fin_abonnement) }}
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
